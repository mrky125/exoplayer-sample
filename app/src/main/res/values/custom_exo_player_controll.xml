<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="custom_exo_media_button_width">112dp</dimen>
    <dimen name="custom_exo_media_button_height">82dp</dimen>
    <style name="CustomExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/custom_exo_media_button_width</item>
        <item name="android:layout_height">@dimen/custom_exo_media_button_height</item>
    </style>

    <style name="CustomExoMediaButton.Next">
        <item name="android:src">@drawable/exo_controls_next</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="CustomExoMediaButton.Pause">
        <item name="android:src">@drawable/custom_exo_icon_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="CustomExoMediaButton.Play">
        <item name="android:src">@drawable/custom_exo_icon_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="CustomExoMediaButton.Previous">
        <item name="android:src">@drawable/exo_controls_previous</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>
</resources>